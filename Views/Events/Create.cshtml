@model VenueDBApp.Data.Event

@{
    ViewData["Title"] = "Create Event";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">Create New Event</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="EventName" class="control-label">Event Name</label>
                            <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="EventDate" class="control-label">Event Date</label>
                            <input asp-for="EventDate" class="form-control" type="date" />
                            <span asp-validation-for="EventDate" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter event description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="VenueId" class="control-label">Venue</label>
                            <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueID">
                                <option value="">-- Select a venue --</option>
                            </select>
                            <span asp-validation-for="VenueId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Event
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 