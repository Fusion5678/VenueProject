@model VenueDBApp.Data.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">@Model.EventName</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Event Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Event ID:</dt>
                                <dd class="col-sm-8">@Model.EventId</dd>
                                
                                <dt class="col-sm-4">Event Name:</dt>
                                <dd class="col-sm-8">@Model.EventName</dd>
                                
                                <dt class="col-sm-4">Event Date:</dt>
                                <dd class="col-sm-8">@Model.EventDate.ToString("MMM dd, yyyy")</dd>
                                
                                @if (Model.Venue != null)
                                {
                                    <dt class="col-sm-4">Venue:</dt>
                                    <dd class="col-sm-8">@Model.Venue.VenueName</dd>
                                }
                                
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <dt class="col-sm-4">Description:</dt>
                                    <dd class="col-sm-8">@Model.Description</dd>
                                }
                            </dl>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Event
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            @if (Model.Venue != null)
            {
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Venue Information</h5>
                    </div>
                    <div class="card-body">
                        <h6>@Model.Venue.VenueName</h6>
                        @if (!string.IsNullOrEmpty(Model.Venue.Location))
                        {
                            <p class="text-muted">@Model.Venue.Location</p>
                        }
                        @if (Model.Venue.Capacity.HasValue)
                        {
                            <p class="text-muted">Capacity: @Model.Venue.Capacity</p>
                        }
                        <a asp-controller="Venues" asp-action="Details" asp-route-id="@Model.VenueId" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-info-circle"></i> View Venue Details
                        </a>
                    </div>
                </div>
            }
            
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Bookings</h5>
                </div>
                <div class="card-body">
                    @if (Model.Bookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.Bookings)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@booking.Venue.VenueName</h6>
                                    <p class="mb-1 text-muted">Booked: @booking.BookingDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No bookings for this event.</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="Bookings" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Booking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
