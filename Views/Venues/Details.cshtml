@model VenueDBApp.Data.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">@Model.VenueName</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.VenueName" style="max-height: 400px;">
                        </div>
                    }
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Venue Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.VenueName</dd>
                                
                                @if (!string.IsNullOrEmpty(Model.Location))
                                {
                                    <dt class="col-sm-4">Location:</dt>
                                    <dd class="col-sm-8">@Model.Location</dd>
                                }
                                
                                @if (Model.Capacity.HasValue)
                                {
                                    <dt class="col-sm-4">Capacity:</dt>
                                    <dd class="col-sm-8">@Model.Capacity</dd>
                                }
                            </dl>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Venue
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Events at this Venue</h5>
                </div>
                <div class="card-body">
                    @if (Model.Events.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var evt in Model.Events)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@evt.EventName</h6>
                                    <p class="mb-1 text-muted">@evt.EventDate.ToString("MMM dd, yyyy")</p>
                                    @if (!string.IsNullOrEmpty(evt.Description))
                                    {
                                        <small class="text-muted">@evt.Description</small>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No events scheduled at this venue.</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="Events" asp-action="Create" asp-route-venueId="@Model.VenueId" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Event
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Bookings</h5>
                </div>
                <div class="card-body">
                    @if (Model.Bookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.Bookings)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@booking.Event.EventName</h6>
                                    <p class="mb-1 text-muted">Booked: @booking.BookingDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No bookings for this venue.</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="Bookings" asp-action="Create" asp-route-venueId="@Model.VenueId" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Booking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 