@model VenueDBApp.Data.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Venue</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>Are you sure you want to delete this venue? This action cannot be undone.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Venue Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.VenueName</dd>
                                
                                @if (!string.IsNullOrEmpty(Model.Location))
                                {
                                    <dt class="col-sm-4">Location:</dt>
                                    <dd class="col-sm-8">@Model.Location</dd>
                                }
                                
                                @if (Model.Capacity.HasValue)
                                {
                                    <dt class="col-sm-4">Capacity:</dt>
                                    <dd class="col-sm-8">@Model.Capacity</dd>
                                }
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="VenueId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 