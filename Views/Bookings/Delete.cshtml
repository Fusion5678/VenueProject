@model VenueDBApp.Data.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Booking</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>Are you sure you want to delete this booking? This action cannot be undone.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Booking Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Booking ID:</dt>
                                <dd class="col-sm-8">@Model.BookingId</dd>
                                
                                <dt class="col-sm-4">Booking Date:</dt>
                                <dd class="col-sm-8">@Model.BookingDate.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4">Event:</dt>
                                <dd class="col-sm-8">@Model.Event.EventName</dd>
                                
                                <dt class="col-sm-4">Event Date:</dt>
                                <dd class="col-sm-8">@Model.Event.EventDate.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4">Venue:</dt>
                                <dd class="col-sm-8">@Model.Venue.VenueName</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="BookingId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
